{
  "version": 2,
  "builds": [
    {
      "src": "client/**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "admin/**/*.html", 
      "use": "@vercel/static"
    },
    {
      "src": "functions/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/client/(.*)",
      "dest": "/client/$1"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/admin/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/functions/$1"
    },
    {
      "src": "/",
      "dest": "/client/index.html"
    }
  ]
}
